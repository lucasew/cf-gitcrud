{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>lewtec/renovate-config:base"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "automergeType": "pr",
    "enabled": true,
    "recreateWhen": "always"
  },
  "packageRules": [
    {
      "automerge": true,
      "ignoreTests": true,
      "matchPackageNames": [
        "@cloudflare/workers-types",
        "wrangler"
      ]
    },
    {
      "automerge": true,
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ]
}
