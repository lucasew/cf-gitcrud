{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>lewtec/renovate-config:base",
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "automergeType": "pr",
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "@cloudflare/workers-types",
        "wrangler"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
